{% extends 'base.html.twig' %}

{% block body %}
    <h1>Regions list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td><a href="{{ path('admin_region_show', { 'id': region.id }) }}">{{ region.id }}</a></td>
                <td>{{ region.name }}</td>
                <td>{{ region.slug }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_region_show', { 'id': region.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_region_edit', { 'id': region.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_region_new') }}">Create a new region</a>
        </li>
    </ul>
{% endblock %}
