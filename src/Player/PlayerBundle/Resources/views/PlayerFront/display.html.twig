                                {% block assists %}{{ player.assists }}{% endblock %}
                                {% block passes %}{{ player.passes }}{% endblock %}
                                {% block fouls %}{{ player.fouls }}{% endblock %}
                                {% block yc %}{{ player.yellowCard }}{% endblock %}
                                {% block rc %}{{ player.redCard }}{% endblock %}
                            {% endembed %}
