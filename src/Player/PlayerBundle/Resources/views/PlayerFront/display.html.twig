                        {% block playerPos%}{{ player.playerPosition }}{% endblock %}
                        {% block playerGoals%}{{ player.goalScored }}{% endblock %}
                        {% block playerAssists%}{{ player.assists }}{% endblock %}
                        {% block playerShot%}{{ player.shots }}{% endblock %}
                        {% block playerSot%}{{ player.shotsOnTarget }}{% endblock %}
                        {% block yellowCard%}{{ player.yellowCard }}{% endblock %}
                        {% block redCard%}{{ player.redCard }}{% endblock %}
                        {% block skills%}
                            {% for skill in player.skills %}
                            {% embed  'FrontBundle:player-component:_player-skill.html.twig' %}
                                {% block skillLabel%}{{ skill.label }}{% endblock %}
                                {% block skillValue%}{{ skill.label }}{% endblock %}
                            {% endembed %}
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                    {% embed  'FrontBundle:team-component:_team-info-bio.html.twig' %}
                    {% endembed %}
