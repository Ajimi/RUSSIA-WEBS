{% block page_title %}Article Management{% endblock %}
{% block page_content %}
    <h1>Articles list</h1>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                {#<h2>Default Example#}
                {#<small>Users</small>#}
                {#</h2>#}
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Settings 1</a>
                            </li>
                            <li><a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                {#<p class="text-muted font-13 m-b-30">#}
                {#DataTables has most features enabled by default, so all you need to do to use it#}
                {#with your own tables is to call the construction function:#}
                {#<code>$().DataTable();</code>#}
                {#</p>#}
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Content</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for article in articles %}
                        <tr>
                            <td><a href="{{ path('admin_article_show', { 'id': article.id }) }}">{{ article.id }}</a>
                            </td>
                            <td>{{ article.content|raw }}</td>
                            <td>
                                <ul>

                                    <a href="{{ path('admin_article_show', { 'id': article.id }) }}">
                                        <botton class="btn btn-round btn-info">show</botton>
                                    </a>

                                    <br>
                                    <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">
                                        <button class="btn btn-round btn-info">edit</button>
                                    </a>

                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <ul>
        <li>
            <a href="{{ path('article_new') }}">
                <button id="compose" class="btn btn-sm btn-success btn-block" type="button">
                    Create
                </button>
            </a>
        </li>
    </ul>
{% endblock %}

