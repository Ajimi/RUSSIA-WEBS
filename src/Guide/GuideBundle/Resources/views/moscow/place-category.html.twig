<section class="section section-md bg-gray-100">
    <div class="container">
        <div class="row row-50">
            <div class="col-md-11 col-lg-9 order-lg-1">
                {% include 'FrontBundle:other-component:_heading-component-title.html.twig' with {'heading_title': "title"} %}
                <div class="row row-30 row-lg-20 row-offset-1 justify-content-sm-center justify-content-md-start justify-content-lg-center">
                    {% for place in  places %}
                        <div class="col-sm-10 col-md-6 col-xl-12">
                            {% embed '@Guide/guide/place-component.html.twig'
                            with {url: path('place_show', {'id': place.id})} %}
                                {% block image %}http://cdn.welcome2018.com/upload/iblock/04a/tass_12031814.jpg{% endblock %}
                                {% block name %}
                                    {{ place.name }}
                                {% endblock %}
                                {% block description %}
                                    {{ place.previewText|slice(0,100)|raw }} ...
                                {% endblock %}
                            {% endembed %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>