<article class="post-carmen">
    <img
            src="{% block image %}{{ asset('assets/images/news-5-1-369x343.jpg') }}{% endblock %}"
            alt="" width="369" height="343"/>
    <div class="post-carmen-header">
        <!-- Badge-->
        <div class="badge {% block badge_class %}badge-secondary{% endblock %}">{% block badge %}The Team{% endblock %}
        </div>
    </div>
    <div class="post-carmen-main">
        <h4 class="post-carmen-title">
            <a href="{% block url %}blog-post.html{% endblock %}">
                {% block title %}
                    The TeamThe Florida Gators mascot shielded a kid from a foul ball
                {% endblock %}
            </a>
        </h4>
        <div class="post-carmen-meta">
            <div class="post-carmen-time"><span class="icon mdi mdi-clock"></span>
                <time datetime="2017">{% block time %}April 15, 2017{% endblock %}</time>
            </div>
            <div class="post-carmen-comment">
                <span class="icon mdi mdi-comment-outline"></span>
                <a href="#">
                    {% block comment_number %}345{% endblock %}
                </a>
            </div>
            <div class="post-carmen-view">
                <span class="icon fl-justicons-visible6"></span>
                {% block view_number %}234{% endblock %}
            </div>
        </div>
    </div>
</article>