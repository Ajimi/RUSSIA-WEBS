{% extends "BackBundle:common:_base.html.twig" %}

{% block title %}GroupBundle:GroupController:AfficherGroup{% endblock %}

{% block body %}
    {% block page_content %}

        <div class="row centered">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel ">
                    <a href="/" style="margin-top: 10px;" class="btn btn-success">Back to the application</a>
                    <div class="x_title">
                        <div class="right_col" role="main">


                            <h1>La liste des groupes</h1>
                            <div class="clearfix"></div>

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="ln_solid"></div>
                                <table border="5">
                                    <tr>


                                        <th>Name of group</th>
                                        <th>Team 1</th>
                                        <th>Team 2</th>
                                        <th>Team 3</th>
                                        <th>Team 4</th>
                                        <th>Update/Delete Group</th>

                                    </tr>


                                    {% for groups in G %}


                                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                            <tr>
                                                <td>{{ groups.name }}</td>
                                                <td>{{ groups.team1.teamName }}</td>
                                                <td>{{ groups.team2.teamName }}</td>
                                                <td>{{ groups.team3.teamName }}</td>
                                                <td>{{ groups.team4.teamName }}</td>

                                                <td class="btn btn-primary"><a
                                                            href="{{ path('admin_group_delete',{'id':groups.id}) }}">Delete
                                                        Group</a></td>
                                                <td class="btn btn-success">Update Group</td>


                                            </tr>
                                        </div>


                                    {% endfor %}


                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
