{% extends 'BackBundle:common:_base.html.twig' %}

{% block page_content %}

    <h1>Place</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ place.id }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ place.type }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ place.name }}</td>
        </tr>
        <tr>
            <th>Information</th>
            <td>{{ place.information }}</td>
        </tr>
        <tr>
            <th>Previewtext</th>
            <td>{{ place.previewText }}</td>
        </tr>
        <tr>
            <th>Previewpicture</th>
            <td>{{ place.previewPicture }}</td>
        </tr>
        <tr>
            <th>Workingtime</th>
            <td>{{ place.workingTime }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ place.phone }}</td>
        </tr>
        <tr>
            <th>Siteurl</th>
            <td>{{ place.siteUrl }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_place_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_place_edit', { 'id': place.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
