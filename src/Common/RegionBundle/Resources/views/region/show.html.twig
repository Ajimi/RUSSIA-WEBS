{% extends '@Back/common/_base.html.twig' %}

{% block page_content %}
    <h1>Region</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ region.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ region.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ region.slug }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_region_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_region_edit', { 'id': region.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>




{% endblock %}
