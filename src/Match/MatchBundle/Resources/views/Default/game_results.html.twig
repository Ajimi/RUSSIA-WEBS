{% extends 'BackBundle:common:_base.html.twig' %}
{% block title %}Match | Game Result{% endblock %}
{% block page_title %}Game Result {% endblock page_title %}


{% block page_content %}


    <div class="col-md-10 col-sm-12 col-xs-12 centered">
        <div class="x_panel">
            <div class="x_title">
                <h2>Last Result
                </h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-hover">
                    {% for score in formatedResult %}
                        <tr>
                            <td style='text-align:center;vertical-align:baseline'>
                                <img src="{{ asset('assets/images/teamUploads/teamFlag.png') }}"> {{ score.team1Statistics.name |upper }}
                            </td>

                            <td style='text-align:center;vertical-align:middle'>
                                <h2> {{ score.team1Statistics.match }}</h2>
                                <h1> {{ score.team1Statistics.shots }} - {{ score.team2Statistics.shots }} </h1>
                                <a href=""
                                   class="btn btn-success btn-xs">
                                    <i class="fa fa-pencil"></i> Update
                                </a>
                            </td>
                            <td style='text-align:center;vertical-align:baseline'>{{ score.team2Statistics.name |upper }}
                                <img src="{{ asset('assets/images/teamUploads/teamFlag.png') }}">
                            </td>
                        </tr>

                    {% endfor %}

                </table>

            </div>
        </div>
    </div>

{% endblock page_content %}
