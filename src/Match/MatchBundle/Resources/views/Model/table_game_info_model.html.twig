<div class="table-game-info-wrap"><span class="table-game-info-title">Game statistics<span></span></span>
    <div class="table-game-info-main table-custom-responsive">
        <table class="table-custom table-game-info">
            <tbody>
            <tr>
                <td class="table-game-info-number">{{ stat1.shots }}</td>
                <td class="table-game-info-category">Shots (on target)</td>
                <td class="table-game-info-number">{{ stat2.shots }}</td>
            </tr>
            <tr>
                <td class="table-game-info-number">{{ stat1.cornerKicks }}</td>
                <td class="table-game-info-category">Corner kicks</td>
                <td class="table-game-info-number">{{ stat2.cornerKicks }}</td>
            </tr>
            <tr>
                <td class="table-game-info-number">{{ stat1.fouls }}</td>
                <td class="table-game-info-category">Saves</td>
                <td class="table-game-info-number">{{ stat2.fouls }}</td>
            </tr>
            <tr>
                <td class="table-game-info-number">{{ stat1.yellowCard }}</td>
                <td class="table-game-info-category">Yellow cards</td>
                <td class="table-game-info-number">{{ stat2.yellowCard }}</td>
            </tr>
            <tr>
                <td class="table-game-info-number">{{ stat1.redCards }}</td>
                <td class="table-game-info-category">Red cards</td>
                <td class="table-game-info-number">{{ stat2.redCards }}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>