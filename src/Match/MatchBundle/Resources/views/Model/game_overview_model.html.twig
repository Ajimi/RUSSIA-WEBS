{% set logoT1 = 'assets/images/teamUploads/' ~  score.match.team1.teamLogo %}
{% set logoT2 = 'assets/images/teamUploads/' ~ score.match.team2.teamLogo %}

<article class="game-result">
    <div class="game-info game-info-classic">
        <p class="game-info-subtitle">{{ score.match.stadium }} Stadium -
            <time datetime="2017-04-17"> {{ score.match.date | date("m/d/Y") }}</time>
        </p>
        <h3 class="game-info-title">{{ score.match.level }}</h3>
        <div class="game-info-main">
            <a class="game-info-team game-info-team-first"href="{{ path('team_display',{'id':score.match.team1.id} )}}">
                <figure><img src="{{ asset(logoT1) }}" alt="" width="100"
                             height="100"/>
                </figure>
                <div class="game-result-team-name">{{ score.match.team1.teamName | slice(0,10) }}</div>
                <div class="game-result-team-country">{{ score.match.team1.teamShortcut }}</div>
            </a>
            <div class="game-info-middle">
                <div class="game-result-score-wrap">
                    {% if score.scoreTeam1 > score.scoreTeam2 %}
                        <div class="game-info-score game-result-team-win"> {{ score.scoreTeam1 }}</div>
                        <div class="game-info-score">{{ score.scoreTeam2 }}</div>

                    {% else %}
                        {% if score.scoreTeam1 < score.scoreTeam2 %}
                            <div class="game-info-score">{{ score.scoreTeam1 }}</div>
                            <div class="game-info-score game-result-team-win"> {{ score.scoreTeam2 }}</div>
                        {% else %}
                            <div class="game-info-score">{{ score.scoreTeam1 }}</div>
                            <div class="game-info-score">{{ score.scoreTeam2 }}</div>

                        {% endif %}

                    {% endif %}
                </div>
                <div class="game-result-divider-wrap"><span class="game-info-team-divider">VS</span>

                </div>
            </div>
            <a class="game-info-team game-info-team-second" href="{{ path('team_display',{'id':score.match.team2.id} )}}">
                <figure><img src="{{ asset(logoT2) }}" alt="" width="75"
                             height="106"/>
                </figure>
                <div class="game-result-team-name">{{ score.match.team2.teamName | slice(0,10) }}</div>
                <div class="game-result-team-country">{{ score.match.team2.teamShortcut }}</div>
            </a>
        </div>

        {% include '@Match/Model/table_game_info_model.html.twig' %}
        {% include '@Match/Model/accuracy_model.html.twig' %}
    </div>
</article>