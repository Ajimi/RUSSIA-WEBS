{% extends 'FrontBundle:common:_base.html.twig' %}

{% block body %}


    {% include '@Match/Breadcrumbs/breadcrumbs_results.html.twig' %}


    {% if scores.getTotalItemCount == 0 %}
        {% include '@Match/FrontViews/no_data_found.html.twig' %}
    {% else %}

        <section class="section section-sm bg-gray-100">
            <div class="container">
                <div class="row row-50">
                    <div class="col-lg-8">
                        <!-- Heading Component-->
                        <article class="heading-component">
                            <div class="heading-component-inner">
                                <h5 class="heading-component-title">Game Results
                                </h5>

                            </div>
                        </article>

                        {% include '@Match/FrontViews/single_game_result_model.html.twig' %}
                    </div>


                    <div class="col-lg-4">
                        <div class="row row-30">
                            <div class="col-md-6 col-lg-12">
                                {% include "FrontBundle:news-main-component:_standing.html.twig" %}
                            </div>



                            <div class="col-md-6 col-lg-12">
                                <!-- Heading Component-->
                                <article class="heading-component">
                                    <div class="heading-component-inner">
                                        <h5 class="heading-component-title">Best scorer
                                        </h5>
                                    </div>
                                </article>
                                {% include '@Front/player-component/_player-info-minimal.html.twig' %}
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

{% endblock body %}