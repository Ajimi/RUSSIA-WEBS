{% set logoT1 = 'assets/images/teamUploads/'~ match.team1.teamLogo%}
{% set logoT2 = 'assets/images/teamUploads/'~ match.team2.teamLogo%}

<div class="main-component">
        <article class="game-result">
            <div class="game-info game-info-creative">
                <p class="game-info-subtitle">Match starts at {{match.time}}
                </p>
                <h3 class="game-info-title">Russia World Cup 2018</h3>
                <div class="game-info-main">
                    <div class="game-info-team game-info-team-first">
                        <figure><img src="{{ asset(logoT1) }}" alt="" width="100"
                                     height="100"/>
                        </figure>
                        <div class="game-result-team-name">{{ match.team1.teamName}}</div>
                        <div class="game-result-team-country">{{ match.team1.teamShortcut }}</div>
                    </div>
                    <div class="game-info-middle game-info-middle-vertical">
                        <time class="time-big" datetime="2017-04-17"><span
                                    class="heading-3">{{match.date | date('D')|slice(0,3)}} {{ match.date | date('d')}}</span>
                            {{ match.date |date('M Y') }}
                        </time>
                        <div class="game-result-divider-wrap"><span
                                    class="game-info-team-divider">VS</span></div>
                        <div class="group-sm">
                            <a class="button button-sm button-primary"
                               href="{{ path('cart_add_item', {'match' : match.id }) }}">Buy tickets</a>
                        </div>
                    </div>
                    <div class="game-info-team game-info-team-second">
                        <figure><img src="{{ asset(logoT2) }}" alt="" width="113"
                                     height="106"/>
                        </figure>
                        <div class="game-result-team-name">{{ match.team2.teamName }}</div>
                        <div class="game-result-team-country">{{ match.team2.teamShortcut }}</div>
                    </div>
                </div>
            </div>
            <div class="game-info-countdown">
                {% set countdouwn =  match.date|date('d F Y')~' '~match.time  %}
                <div class="countdown countdown-bordered" data-type="until"
                     data-time="{{ countdouwn }}" data-format="dhms" data-style="short"></div>

            </div>
        </article>
</div>