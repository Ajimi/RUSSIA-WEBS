<section class="section section-sm bg-gray-100">
    <div class="container">
        <!-- Heading Component-->

        <article class="heading-component row-30">
            <div class="heading-component-inner">
                <h5 class="heading-component-title">Game schedule
                </h5>
                <div class="heading-component-aside">
                    <ul class="list-inline list-inline-xs list-inline-middle">
                        <li>
                            <select class="select select-minimal" data-placeholder="Select an option"
                                    data-dropdown-class="select-minimal-dropdown" id="groups">
                                <option value="All" selected="">All Matches</option>
                                <option value="A">Group A</option>
                                <option value="B">Group B</option>
                                <option value="C">Group C</option>
                                <option value="D">Group D</option>
                            </select>
                        </li>
                        <li>
                            <select class="select select-minimal" data-placeholder="Select an option"
                                    data-dropdown-class="select-minimal-dropdown" id="js-team-select">
                                <option value="all" selected="">All Teams</option>
                                {% for team in teams %}
                                    <option value="{{ team.id }}">{{ team.teamName|truncate(15) }}</option>
                                {% endfor %}
                            </select>
                        </li>
                    </ul>
                </div>
            </div>
        </article>

        <div class="row row-30" style="margin-top: 50px">

            {% for match in matches %}

                <div class="col-lg-4">
                    {% if match.id in matchesId|keys %}
                        {% embed '@Front/game-promo-component/_game-promo-classic.html.twig' with {"match": match, 'button': 'GO TO CART'} %}
                            {% block team1 %}{{ match.team1.teamName|slice(15) }}{% endblock %}
                            {% block team2 %}{{ match.team2.teamName|slice(15) }}{% endblock %}
                            {% block team_shortcut1 %}{{ match.team1.teamShortcut }}{% endblock %}
                            {% block team_shortcut2 %}{{ match.team2.teamShortcut }}{% endblock %}
                            {% block team_image1 %}{{ "/assets/images/teamUploads" ~ asset(match.team1.teamLogo) }}{% endblock %}
                            {% block team_image2 %}{{ "/assets/images/teamUploads" ~ asset(match.team2.teamLogo) }}{% endblock %}
                            {% block time %}{{ match.date }}{% endblock %}
                        {% endembed %}

                    {% else %}
                        {% embed '@Front/game-promo-component/_game-promo-classic.html.twig' with {"match": match   } %}
                            {% block team1 %}{{ match.team1.teamName|truncate(15) }}{% endblock %}
                            {% block team2 %}{{ match.team2.teamName|slice(15) }}{% endblock %}
                            {% block team_shortcut1 %}{{ match.team1.teamShortcut }}{% endblock %}
                            {% block team_shortcut2 %}{{ match.team2.teamShortcut }}{% endblock %}
                            {% block team_image1 %}{{ "/assets/images/teamUploads" ~ asset(match.team1.teamLogo) }}{% endblock %}
                            {% block team_image2 %}{{ "/assets/images/teamUploads" ~ asset(match.team2.teamLogo) }}{% endblock %}
                            {% block time %}{{ match.date }}{% endblock %}
                        {% endembed %}
                    {% endif %}

                </div>
            {% endfor %}
        </div>
    </div>


</section>