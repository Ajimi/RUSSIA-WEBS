{% extends 'BackBundle:common:_base.html.twig' %}
{% block page_title %}Forum management{% endblock page_title %}
{% block page_content %}
    <h1>Subject creation</h1>

    {{ form_start(form , {'attr': {'class': 'form-horizontal form-label-left'}}) }}
    <div class="item form-group">
        {{ form_label(form.title, 'Title', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.title, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="item form-group">
        {{ form_label(form.content, 'Content', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.content, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="item form-group">
        {{ form_label(form.file, 'Image', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.file, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="item form-group">
        {{ form_label(form.etat, 'State', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.etat, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="col-md-6 col-md-offset-3">
        <button type="reset" class="btn btn-primary">cancel</button>
        <button id="submit" type="submit" class="btn btn-success">Submit</button>
    </div>

    {{ form_rest(form) }}

    {{ form_end(form) }}


    <a href="{{ path('admin_subject_index') }}">
        <button class="btn btn-primary">SHOW LIST</button>
    </a>

{% endblock %}
