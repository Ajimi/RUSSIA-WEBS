{% extends 'BackBundle:common:_base.html.twig' %}

{% block page_content %}
    <h1>Subject edit</h1>




    {{ form_start(edit_form , {'attr': {'class': 'form-horizontal form-label-left'}}) }}
    <div class="item form-group">
        {{ form_label(edit_form.title, 'Title', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="item form-group">
        {{ form_label(edit_form.content, 'Content', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="item form-group">
        {{ form_label(edit_form.videoUrl, 'Video Url', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.videoUrl, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="item form-group">
        {{ form_label(edit_form.file, 'Image', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.file, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>
    <div class="item form-group">
        {{ form_label(edit_form.etat, 'State', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.etat, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
        </div>
    </div>

    <div class="col-md-6 col-md-offset-3">
        <button id="submit" type="submit" class="btn btn-success">Submit</button>
    </div>
    {{ form_end(edit_form) }}
    <table>
        <tr><a href="{{ path('admin_subject_index') }}"><button class="btn btn-primary">SHOW LIST</button></a></tr>
    {{ form_start(delete_form) }}
        <tr><input type="submit" class="btn btn-error" value="Delete"></tr>
    {{ form_end(delete_form) }}
    </table>



{% endblock %}
